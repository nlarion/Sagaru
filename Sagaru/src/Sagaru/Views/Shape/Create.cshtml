@{
    ViewData["Title"] = "Sagaru - Create a New Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Sagaru.Models.Shape
<h2>Create</h2>
<hr />
<h4>Add a new Shape</h4>
<div class="form">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-sm-3">
                @Html.LabelFor(model => model.Type) @Html.TextBoxFor(model => model.Type)
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(model => model.X) @Html.TextBoxFor(model => model.X, new { @type = "number" })
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(model => model.Y) @Html.TextBoxFor(model => model.Y, new { @type = "number" })
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(model => model.ProjectId) @Html.DropDownList("ProjectId")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <input class="btn btn-warning" type="submit" value="Create" />
            </div>
        </div>
    }
</div>

<p>@Html.ActionLink("Back to home", "Index")</p>